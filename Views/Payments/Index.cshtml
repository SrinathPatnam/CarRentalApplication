@model IEnumerable<CarRentalApplication.Models.Payment>

@{
    ViewData["Title"] = "Index";
}

<h1 style="background-color:lightgoldenrodyellow">Payment History</h1>

<table class="table" style="background-color:lightcyan">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Booking)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment_Price)
            </th>
            <th>
                Payment date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderBy(i => i.CreatedAt))
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Booking.BookingId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpiryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payment_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.PaymentId">Edit</a> |*@
                <a asp-action="Details" asp-route-id="@item.PaymentId">Details</a> 
                @*<a asp-action="Delete" asp-route-id="@item.PaymentId">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
